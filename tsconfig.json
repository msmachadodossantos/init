{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "sourceMap": false
  },
  "include": [
    "resources/assets/core/scripts/**/*.ts",
    "resources/assets/moduleb/scripts/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
